<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lm16.mapper.FatherMapper">
    <select id="get" parameterType="_int" resultType="Father">
            select * from   father  where id= #{id}
    </select>
    <insert id="post" parameterType="Father">
        insert into father(name) values (#{name})
    </insert>

    <update id="put" parameterType="Father">
        update father set name=#{name} where id=#{id}
    </update>
    <delete id="delete" parameterType="_int">
        delete from father where id=#{id}
    </delete>

    <select id="list" resultType="Father">
        select * from father
    </select>
</mapper>